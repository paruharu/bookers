<html>
  <body>
    <h1>Editing Book</h1>

    　<!--エラーメッセージ-->
    <% if @book.errors.any? %>
    　<%= @book.errors.count %> error
    　<% @book.errors.full_messages.each do |message| %>
    　 <%= message %>
    　<% end %>
    <% end %>

    <%= form_with model:@book, local: true do |f| %>

  　<h4>Title</h4>
  　<%= f.text_field :title %>
 　  <h4>Body </h4>
 　  <%= f.text_area :body %>

  　<div>
  　  <%= f.submit 'Update Book' %>
  　</div>

  　<div>
  　<%= link_to "Show", book_path(book.id) %>
  　"|"
  　<%= link_to "Back", books_path %>
  　</div>

　　<% end %>

  </body>
</html>